            <xpath expr="//field[@name='partner_id']" position="after">
                <!--sale invoices-->
                <field name="fiscal_type_id"
                       attrs="{
                       'invisible':['|', '|',('move_type','!=','out_invoice'), ('is_l10n_do_fiscal_invoice','=',False), ('is_debit_note', '=', True)],
                       'required': [('is_l10n_do_fiscal_invoice','=',True), ('move_type','=','out_invoice'), ('is_debit_note', '=', False)],
                       'readonly': ['|',('state','!=','draft'),('ref','!=',False)]}"
                       domain="[('type', '=', 'out_invoice')]"/>
                <field name="income_type"
                       attrs="{
                       'invisible':[('move_type','!=','out_invoice'), ('is_l10n_do_fiscal_invoice','!=',True)],
                       'required': [('is_l10n_do_fiscal_invoice','=',True), ('move_type','=','out_invoice')],
                       'readonly': [('state','!=','draft')]}"/>
                <field name="ref" string="NCF" readonly="1" attrs="{'invisible': [('move_type','not in', ('out_invoice', 'out_refund')), ('ref', '=', False)]}"/>
                <field name="ncf_expiration_date" readonly="1" attrs="{'invisible': [('move_type','not in', ('out_invoice', 'out_refund')), ('ncf_expiration_date', '=', False)]}"/>
                <field name="origin_out"
                       groups="base.group_user"
                       attrs="{
                       'invisible': [('move_type', '!=', 'out_refund'), ('is_debit_note', '=', False)],
                       'readonly': [('state', '!=', 'draft')],
                       'required': ['|', '&amp;', ('move_type', '=', 'out_refund'), ('is_l10n_do_fiscal_invoice', '=', True), ('is_debit_note', '=', True)]}"/>

