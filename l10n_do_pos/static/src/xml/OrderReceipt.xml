<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="attributes">
            <attribute name="t-att-class">env.pos.config.l10n_do_fiscal_journal ? 'total-hidden' : '' </attribute>
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="before">
            <div class="pos-receipt-contact" t-if="env.pos.config.l10n_do_fiscal_journal">
                <t t-esc="receipt.company.name"/>
                    <br/>
                </t>
                <t t-if="receipt.company.street">
                    <t t-esc="receipt.company.street"/>,
                </t>
                <t t-if="receipt.company.street2">
                    <t t-esc="receipt.company.street2"/>
                </t>
                <t t-if="receipt.company.vat">
                    <br/>
                    <strong>RNC/CED: </strong>
                    <t t-esc="receipt.company.vat"/>
                    <br/>
                </t>
                <strong>Phone: </strong>
                <t t-esc="receipt.company.phone || ''"/>
                <br/>
                <br/>
            </div>
        </t>
